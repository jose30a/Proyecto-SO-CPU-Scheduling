{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/simulator.exe", // IMPORTANT: Adjust this if your executable name or path changes
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Set to true to see console output in a separate window
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // IMPORTANT: Adjust this path to your gdb executable
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with Makefile" // Ensures the project is built before debugging
        }
    ]
}